C     IF ( DEBUG ) WRITE(MDEBUG,*) 'PCL   : A,B=',SNGL(A),SNG	C     IF ( DEBUG ) WRITE(MDEBUG,*) 'PCL   : A,B=',SNGL(A),SNG
 								 
    1 CONTINUE							    1 CONTINUE
      CALL RMMAR( RD,1,1 )					      CALL RMMAR( RD,1,1 )
      PCL = -A * LOG ( RD(1) )					      PCL = -A * LOG ( RD(1) )
      IF ( PCL .GT. B ) GOTO 1					      IF ( PCL .GT. B ) GOTO 1
      IF ( DEBUG ) WRITE(MDEBUG,*) 'PCL   : PCL =',SNGL(PCL)	      IF ( DEBUG ) WRITE(MDEBUG,*) 'PCL   : PCL =',SNGL(PCL)
 								 
      RETURN							      RETURN
      END							      END
